# MORI Sniper Bot Configuration
# Copy this file to .env and fill in your values

# ================================
# SOLANA CONFIGURATION
# ================================
SOLANA_RPC_URL=https://api.devnet.solana.com
# For mainnet: https://api.mainnet-beta.solana.com
# For faster RPC: Use QuickNode, Alchemy, or Helius

SOLANA_PRIVATE_KEY=your_base58_private_key_here
# Get from Phantom wallet: Settings > Show Private Key
# Or generate with: solana-keygen new

# ================================
# TRADING SETTINGS
# ================================
TARGET_TOKEN=YOUR_TEST_TOKEN_MINT_ADDRESS
TRADE_AMOUNT_SOL=0.1
NUM_PURCHASES=10
SLIPPAGE_BPS=500
# 500 = 5% slippage

PRIORITY_FEE=100000
# Higher = faster execution but more expensive

# ================================
# SECURITY SETTINGS
# ================================
MIN_LIQUIDITY=5
# Minimum SOL in liquidity pool

MAX_BUY_TAX=10
MAX_SELL_TAX=10
MIN_HOLDERS=10

# ================================
# TELEGRAM MONITORING
# ================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Get from @BotFather on Telegram

TELEGRAM_CHANNEL_1=@ProfessorMoriarty
TELEGRAM_CHANNEL_2=@MoriForum
# Channels/groups to monitor

# ================================
# DISCORD MONITORING (Optional)
# ================================
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_GUILD_ID=your_discord_server_id
DISCORD_CHANNEL_1=announcements
DISCORD_CHANNEL_2=general

# ================================
# TWITTER MONITORING (Optional)
# ================================
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_USERNAME_1=ProfessorMoriarty
TWITTER_USERNAME_2=MoriToken

# ================================
# WEBSITE MONITORING (Optional)
# ================================
WEBSITE_URL_1=https://moritoken.com
WEBSITE_URL_2=https://professor-moriarty.net

# ================================
# AI CONFIGURATION
# ================================
OPENAI_API_KEY=your_openai_api_key
# Get from https://platform.openai.com/api-keys
# Required for AI analysis (can disable in settings)

# ================================
# ALERTS (Optional)
# ================================
DISCORD_WEBHOOK_URL=your_discord_webhook_url
TELEGRAM_ALERTS_CHAT_ID=your_telegram_chat_id

# ================================
# LOGGING
# ================================
LOG_LEVEL=INFO
# DEBUG, INFO, WARNING, ERROR

LOG_FILE=logs/sniper.log

# ================================
# DATABASE
# ================================
DB_PATH=data/sniper.db