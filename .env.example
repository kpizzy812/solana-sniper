# MORI Sniper Bot Configuration
# Скопируйте этот файл в .env и заполните ваши значения

# ================================
# SOLANA КОНФИГУРАЦИЯ
# ================================
SOLANA_RPC_URL=https://api.devnet.solana.com
# Для mainnet: https://api.mainnet-beta.solana.com
# Для быстрого RPC: используйте QuickNode, Alchemy, или Helius

SOLANA_PRIVATE_KEY=your_base58_private_key_here
# Получите из Phantom кошелька: Settings > Show Private Key
# Или сгенерируйте с помощью: solana-keygen new

# ================================
# НАСТРОЙКИ ТОРГОВЛИ
# ================================
TARGET_TOKEN=YOUR_TEST_TOKEN_MINT_ADDRESS
TRADE_AMOUNT_SOL=0.1
NUM_PURCHASES=1
# Количество одновременных покупок (1-10 рекомендуется)

SLIPPAGE_BPS=500
# 500 = 5% проскальзывание

PRIORITY_FEE=100000
# Выше = быстрее исполнение, но дороже

MAX_TRADE_AMOUNT_SOL=1.0
# Максимальный размер одной сделки

# ================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# ================================
MIN_LIQUIDITY=5
# Минимум SOL в пуле ликвидности

MAX_BUY_TAX=10
MAX_SELL_TAX=10
MAX_PRICE_IMPACT=15.0
# Максимальное проскальзывание в %

MIN_HOLDERS=10

# ================================
# МОНИТОРИНГ TELEGRAM
# ================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Получите от @BotFather в Telegram

# Каналы для мониторинга
TELEGRAM_CHANNEL_1=@ProfessorMoriarty
TELEGRAM_CHANNEL_2=@MoriForum

# Группы для мониторинга (с топиками)
TELEGRAM_GROUP_1=@YourGroup
TELEGRAM_GROUP_2=-1001234567890

# Админы (только их сообщения в группах)
TELEGRAM_ADMIN_1=ProfessorMoriarty
TELEGRAM_ADMIN_2=MoriAdmin

# ================================
# МОНИТОРИНГ TWITTER/X
# ================================
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
# Получите с https://developer.twitter.com

TWITTER_USERNAME_1=ProfessorMoriarty
TWITTER_USERNAME_2=MoriToken

# ================================
# МОНИТОРИНГ САЙТОВ
# ================================
WEBSITE_URL_1=https://moritoken.com
WEBSITE_URL_2=https://professor-moriarty.net

# ================================
# AI КОНФИГУРАЦИЯ
# ================================
OPENAI_API_KEY=your_openai_api_key
# Получите с https://platform.openai.com/api-keys
# Требуется для AI анализа (можно отключить в настройках)

# ================================
# УВЕДОМЛЕНИЯ (Опционально)
# ================================
TELEGRAM_ALERTS_CHAT_ID=your_telegram_chat_id

# ================================
# ЛОГИРОВАНИЕ
# ================================
LOG_LEVEL=INFO
# DEBUG, INFO, WARNING, ERROR

LOG_FILE=logs/sniper.log

# ================================
# БАЗА ДАННЫХ
# ================================
DB_PATH=data/sniper.db